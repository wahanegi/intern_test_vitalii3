<div class="lower-header">
  <div class="list-of-links">

<% if current_user.nil? %>
      <ul>
        <li>
          <%= link_to "SIGN IN", "/users/sign_in" %>
        </li>
        <li>
          <%= link_to "SIGN UP", "/users/sign_up" %>
        </li>
     </ul>
<% else %>
      <%= button_to "LOG OUT", destroy_user_session_path(), method: :delete, class: "button_menu" %>
      <ul>
        <li>
          <%= link_to "NEW MESSAGE", new_posted_message_path %>
        </li>
      </ul>
    <% end %>
  </div>
</div>